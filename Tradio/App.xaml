<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Tradio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Modern Commands with Fluent Icons  -->
            <XamlUICommand
                x:Key="ShowHideWindowCommand"
                Description="Show or hide the main window"
                Label="Show Window">
                <XamlUICommand.IconSource>
                    <FontIconSource FontFamily="Segoe Fluent Icons" Glyph="&#xE8A7;" />
                </XamlUICommand.IconSource>
            </XamlUICommand>

            <XamlUICommand
                x:Key="ExitApplicationCommand"
                Description="Exit Tradio"
                Label="Exit">
                <XamlUICommand.IconSource>
                    <FontIconSource FontFamily="Segoe Fluent Icons" Glyph="&#xE8BB;" />
                </XamlUICommand.IconSource>
            </XamlUICommand>

            <XamlUICommand
                x:Key="PlayPauseCommand"
                Description="Play or pause radio"
                Label="xPlay">
                <XamlUICommand.IconSource>
                    <FontIconSource FontFamily="Segoe Fluent Icons" Glyph="&#xE768;" />
                </XamlUICommand.IconSource>
            </XamlUICommand>
        </ResourceDictionary>
    </Application.Resources>
</Application>
