<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Tradio.Controls.OptionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Tradio.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        MinWidth="260"
        MinHeight="200"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
        RowSpacing="12">

        <StackPanel
            Grid.Row="1"
            Margin="18"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Spacing="8">
            <TextBlock VerticalAlignment="Center" Text="Stream URL" />
            <TextBox
                x:Name="StreamUrlTextBox"
                Width="320"
                HorizontalAlignment="Left"
                TextChanged="StreamUrlTextBox_TextChanged" />
            <Button
                x:Name="ApplyUrlButton"
                Click="ApplyUrlButton_Click"
                Content="Apply" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                x:Name="PlayPauseButton"
                Width="90"
                Click="PlayPauseButton_Click" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock VerticalAlignment="Center" Text="Vol" />
            <Slider
                x:Name="VolumeSlider"
                Width="160"
                Maximum="1"
                Minimum="0"
                SmallChange="0.01"
                StepFrequency="0.01"
                ValueChanged="VolumeSlider_ValueChanged" />
            <TextBlock
                x:Name="VolumeValue"
                Width="36"
                TextAlignment="Right" />
        </StackPanel>

        <!--  Start with Windows toggle  -->
        <ToggleSwitch
            x:Name="StartupToggle"
            Grid.Row="4"
            Header="Start with Windows"
            Toggled="StartupToggle_Toggled" />

        <!--  Stream Watchdog toggle  -->
        <ToggleSwitch
            x:Name="WatchdogToggle"
            Grid.Row="5"
            Header="Auto-resume stream (Watchdog)"
            Toggled="WatchdogToggle_Toggled" />

        <!--  Watchdog status display  -->
        <TextBlock
            x:Name="WatchdogStatusText"
            Grid.Row="6"
            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            Text=""
            TextWrapping="Wrap" />

        <TextBlock
            x:Name="UrlErrorText"
            Grid.Row="7"
            Margin="18"
            Foreground="Tomato" />

        <Button
            x:Name="ExitButton"
            Grid.Row="7"
            HorizontalAlignment="Right"
            Click="ExitButton_Click"
            Content="❌ Exit" />
    </Grid>
</UserControl>
