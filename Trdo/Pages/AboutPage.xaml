<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Trdo.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trdo.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*" RowSpacing="24">
        <!--  About Title  -->
        <TextBlock
            Grid.Row="0"
            FontSize="24"
            FontWeight="SemiBold"
            Text="About" />

        <!--  About Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="0,0,12,0" Spacing="24">
                <!--  App Name and Version  -->
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="{x:Bind ViewModel.AppName}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{x:Bind ViewModel.Version}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!--  Description  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="14"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{x:Bind ViewModel.AppDescription}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!--  Review Section  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Enjoying Tradio?"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="If you like this app, please consider leaving a review in the Microsoft Store. Your feedback helps improve the app!"
                        TextWrapping="Wrap" />

                    <Button
                        Margin="0,8,0,0"
                        HorizontalAlignment="Stretch"
                        Click="ReviewButton_Click"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE734;" />
                            <TextBlock Text="Rate and Review" TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--  GitHub Section  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Open Source"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="This app is open source and available on GitHub."
                        TextWrapping="Wrap" />

                    <HyperlinkButton
                        Padding="0,8,0,0"
                        Click="GitHubButton_Click"
                        Content="{x:Bind ViewModel.GitHubDisplayText}" />
                </StackPanel>

                <!--  Developer Section  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Developer"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{x:Bind ViewModel.DeveloperName}"
                        TextWrapping="Wrap" />

                    <HyperlinkButton
                        Padding="0,8,0,0"
                        Click="DeveloperGitHubButton_Click">
                        <TextBlock Text="Visit Developer's GitHub" TextWrapping="Wrap" />
                    </HyperlinkButton>
                </StackPanel>

                <!--  Features Section  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Features"
                        TextWrapping="Wrap" />

                    <StackPanel Spacing="8">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <FontIcon
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                FontSize="14"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="System tray integration for easy access"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <FontIcon
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                FontSize="14"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Multiple radio station support"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <FontIcon
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                FontSize="14"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Stream watchdog for automatic reconnection"
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <FontIcon
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                FontSize="14"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Start with Windows option"
                                TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
